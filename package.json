    "esbuild": "^0.15.7",
    "esbuild-node-externals": "^1.5.0",
    "@doc-tools/transform": ">=2.9.0",
    "markdown-it-checkbox": "^1.1.0",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-ins": "^3.0.1",
    "markdown-it-sub": "^1.0.0",
