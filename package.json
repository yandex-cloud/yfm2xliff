    "@yandex-cloud/prettier-config": "^1.0.0",
    "eslint": "^8.14.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.2"
  },
  "dependencies": {
    "@doc-tools/sentenizer": "0.0.0",
